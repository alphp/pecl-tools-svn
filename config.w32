// vim:ft=javascript

 
ARG_WITH("svn", "for svn support", "no");

if (PHP_SVN != "no") {
	if (CHECK_LIB("libsvn-client-1.lib", "svn", PHP_SVN) &&
			CHECK_HEADER_ADD_INCLUDE("svn_client.h", "CFLAGS_SVN") &&
			CHECK_HEADER_ADD_INCLUDE("apr.h", "CFLAGS_SVN") &&
			CHECK_LIB("libapr.lib", "svn", PHP_SVN)) {
		EXTENSION("svn", "svn.c");
		AC_DEFINE('HAVE_SVN', 1, 'Have Subversion library');
	} else {
		WARNING("svn not enabled; libraries and headers not found");
	}
}

